@inherits LayoutComponentBase
<FluentLayout>
    <FluentHeader Style="font-family:Bahnschrift;">
        ACADEMIC REGISTRATION INFORMATION SYSTEM
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent>
            <div class="content" style="font-family:Bahnschrift">
                <FluentMessageBarProvider Section="MESSAGES_TOP" />
                @Body
            </div>
            <FluentDialogProvider @rendermode="InteractiveServer" />
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <div class="link1">
            <a href="https://www.fluentui-blazor.net" target="_blank">Documentation and demos</a>
        </div>
        <div class="link2">
            <a href="https://learn.microsoft.com/en-us/aspnet/core/blazor" target="_blank">About Blazor</a>
        </div>
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
